solid-black-border(n) {
	border: n solid black;
}

#root {
	height: 100%;
	width: 100%;
}

.main {
	display: flex;
	width: 100%;
	height: 100%;
	justify-content: space-around;
}

.sidebar {
	width: 19%;
	display: flex;
	justify-content: center;
}

.board {
	height: 85%;
	width: 85%;
	display: flex;
	flex-direction: column;
	justify-content: space-around;
}

section {
	display: flex;
	flex-direction: column;
	justify-content: space-around;
	background-image: url('https://raw.githubusercontent.com/arnabghs/solitaire/gh-pages/wooden_background.jpg');
}

header {
	height: 15%;
	display: flex;
	justify-content: center;
}

.card {
	font-size: 200px;
	height: 190px;
	width: 140px;
	background-color: whitesmoke;
	display: flex;
	align-items: center;
	justify-content: center;
	border-radius: 15px;
	box-shadow: -2px 7px 8px 0px rgba(0, 0, 0, 0.4);
}

.back-card {
	@extend .card;
	color: rgb(62, 62, 165);
}

.red-card {
	@extend .card;
	color: red;

	&:hover {
		cursor: grab;
	}
}

.black-card {
	@extend .card;
	color: black;

	&:hover {
		cursor: grab;
	}
}

.stock-pile {
	width: 14%;
	display: flex;
	justify-content: center;
	align-items: center;

	&:hover {
		cursor: pointer;
	}
}

.waste-cards-area {
	display: flex;
	justify-content: center;
	align-items: center;
	width: 14%;
}

.foundation-area {
	width: 60%;
	display: flex;
	justify-content: space-evenly;
	align-items: center;
}

.foundation-box {
	// solid-black-border(1px);
	border-radius: 10px;
	background-color: #FFE4C4;
	width: 22%;
	height: 100%;
	display: flex;
	justify-content: center;
	align-items: center;
}

.tableau-area {
	width: 90%;
	height: 100%;
	display: flex;
	justify-content: space-around;
	align-items: center;
}

.tableau-pile {
	height: 100%;
	width: 145px;
	display: grid;
	justify-content: center;
	grid-auto-rows: 70px 70px 70px 70px 70px 70px 70px;
}

.upper-part {
	height: 28%;
	width: 100%;
	display: flex;
	justify-content: space-around;
}

.lower-part {
	height: 67%;
	width: 100%;
	display: flex;
	justify-content: center;
}

.refresh-img {
	height: 50px;
	width: 50px;
}

.base-card-holder {
	height: 195px;
	width: 145px;
	background-color: whitesmoke;
	border-radius: 15px;
	box-shadow: -2px 7px 8px 0px rgba(0, 0, 0, 0.4);
}

.win-overlay {
	position: fixed;
	left: 35%;
	top: 20%;
	display: flex;
	width: 40%;
	height: 60%;
	z-index: 2;
	background-color: beige;
	flex-direction: column;
	justify-content: space-around;
	align-items: center;
	border-radius: 20px;
	box-shadow: 1px 0px 31px -6px rgba(0, 0, 0, 0.72);
}

button {
	cursor: pointer;
	height: 80px;
	width: 150px;
	font-size: 40px;
	border-radius: 10px;
}

.win-msg {
	font-size: 50px;
	font-family: 'Merienda', cursive;
}